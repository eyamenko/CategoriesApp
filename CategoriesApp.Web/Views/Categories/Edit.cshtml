@using System.Web.Optimization
@model CategoriesApp.Models.ViewModels.CategoriesEditViewModel
@section styles
{
    <link rel="stylesheet" href="~/Assets/css/apps/categories/compiled/compiled.css" />
}

<div class="app"></div>

@section scripts
{
    <script>
        $(function() {
            var model = new Categories.Models.CategoryModel({
                id: @Model.Category.Id,
                name: "@Model.Category.Name",
                @if (Model.Category.ParentId.HasValue)
                {
                    @:parentId: @Model.Category.ParentId.Value
                }
            });
            var view = new Categories.Views.CategoryView({ model: model });
            $(".app").html(view.render().el);
        });
    </script>

    @Scripts.Render("~/bundles/js/categories")
}